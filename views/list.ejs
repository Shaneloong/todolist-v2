<%- include('header'); %> 
    <div class="box" id="heading">
        <h1> <%= listTitle %>  </h1>
    </div>
    
    <div class="box">
            <% newListItem.forEach(listItem => { %>
                <form action="/delete" method="post">
                    <div class="item">
                        <input type="checkbox" name="checkbox" value="<%=listItem._id%>" onchange="this.form.submit()">
                        <input type="hidden" name="listName" value="<%= listTitle%>">
                        <p> <%= listItem.name %></p>
                    </div>
                </form>
                
            <% });  %>

            <form action="/" method="post" class="item">
                <input type="text" name="newItem" id="newAct" placeholder="New Activity" autofocus autocapitalize="words" autocomplete="off">
                <button type="submit" name="list" id="submitBtn" value='<%= listTitle %>'>+</button>
            </form>
    </div>

    <script src="js/validation.js"></script>
<%- include('footer'); %> 